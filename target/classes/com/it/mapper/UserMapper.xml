<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.it.mapper.UserMapper">
    <!--  1  -->
    <sql id="bran">
        *
    </sql>
    <select id="selectAll" resultType="com.it.user.User">
        select
        <include refid="bran"/>
        from runoob_tbl;
    </select>
    <!--  2  -->
    <select id="selectAllList" resultMap="userResultMap">
        select
        <include refid="bran"/>
        from runoob_tbl;
    </select>

    <resultMap id="userResultMap" type="User">
        <result column="runoob_title" property="runoobTitle"/>
    </resultMap>
    <!--  3  -->
    <select id="selectOne" parameterType="int" resultType="com.it.user.User">
        select
        <include refid="bran"/>
        from runoob_tbl where runoob_id = #{id};
    </select>
</mapper>